<pretty-config
		xsi:schemaLocation=" http://ocpsoft.com/prettyfaces/2.0.4 http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-2.0.4.xsd"
		xmlns="http://ocpsoft.com/prettyfaces/2.0.4" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<url-mapping id="home">
		<pattern value="/"/>
		<view-id>/pages/secure/home.xhtml</view-id>
	</url-mapping>

	<url-mapping id="login">
		<pattern value="/pages/auth/login"/>
		<view-id>/pages/auth/login.xhtml</view-id>
	</url-mapping>



	<url-mapping id="error">
		<pattern value="/error"/>
		<view-id>/pages/error.xhtml</view-id>
	</url-mapping>

</pretty-config>