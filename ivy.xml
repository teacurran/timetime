		<dependency org="org.jboss.seam.rest" name="seam-rest"
					rev="3.1.0.Final" conf="compile->default"/>
		<dependency org="org.jboss.seam.remoting"
					name="seam-remoting"
					rev="3.1.0.Final" conf="compile->default" transitive="false" />

