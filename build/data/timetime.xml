<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
			 xmlns:xsd="http://docs.jboss.org/ironjacamar/schema/datasources_1_1.xsd">
	<datasource jndi-name="java:jboss/datasources/timetime" pool-name="timetime"
				enabled="true" jta="true" use-java-context="true" use-ccm="true">
		<connection-url>
			jdbc:mysql://localhost:3306/timetime
		</connection-url>
		<driver>
			mysql
		</driver>
		<pool>
			<min-pool-size>
				5
			</min-pool-size>
			<max-pool-size>
				20
			</max-pool-size>
			<prefill>
				true
			</prefill>
			<use-strict-min>
				false
			</use-strict-min>
			<flush-strategy>
				FailingConnectionOnly
			</flush-strategy>
		</pool>
		<security>
			<user-name>
				root
			</user-name>
			<password>
				root
			</password>
		</security>
	</datasource>

</datasources>